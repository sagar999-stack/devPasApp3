<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.orders.OrderDetails">


    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/firoza"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/full_name"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Sharone House"
            android:textColor="@color/offWhite"
            android:textSize="10sp"
            android:textStyle="bold"
            tools:ignore="NotSibling"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="sans-serif-medium"
            android:text="Sharone House"
            android:textColor="@color/offWhite"
            android:textSize="8sp"
            tools:ignore="NotSibling"
            tools:text="@tools:sample/full_names" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editTextDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date"
                android:text="20/20/20"
                android:textColor="@color/white"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/in_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="time"
                android:text="20:50Pm"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/call_out_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_layout"
        android:background="@color/offWhite"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/customer_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date"
                android:text="+447788654598"
                android:textColor="@color/surma"
                android:textSize="8sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/out_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="time"
                android:text="20:50Pm"
                android:textAlignment="textEnd"
                android:textColor="@color/surma"
                android:textSize="8sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/item_num_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/call_out_layout"
        android:background="@color/surma"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/numItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/cardview_light_background"
            android:textSize="8sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/table_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_num_layout"
        android:background="@color/gray"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="8sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/table_header"
        android:background="@color/white"

        android:orientation="vertical">


        <ListView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/offWhite" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/table"
        android:background="@color/offWhite"
        android:orientation="horizontal"
        android:padding="5dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            tools:ignore="Suspicious0dp">

            <Button
                android:id="@+id/button5"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/firoza2"
                android:text="Button"
                app:backgroundTint="@color/firoza2" />

            <Button
                android:id="@+id/button6"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/yellow"
                android:text="Button"
                app:backgroundTint="@color/yellow" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="TextView" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/seventh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_section"
        android:background="@color/surma"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>